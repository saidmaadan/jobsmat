<div class='company-show'>
  <%= render partial: "companies/myshare/header" %>
 
  <div class='medium-12 columns company-main'>
     <div class='row'>
      <div class='medium-8 columns'>
        <div class='row'>
          <div class='medium-12 columns company-main-top company'>
            <% @jobs.each do |job| %>

              <% if job.company_name == @company.name %>
                <div class='medium-12 columns company-job-main'>
                  <div class='row'>
                    <div class='medium-2 small-3 columns'>
                      <%= image_tag @company.logo_url, style: "width:60px;height:60px;" if @company.logo_url %>
                    </div>
                    <div class='medium-10 small-9 columns'>
                      <h2><%= link_to job.title, job %></h2>
                      <%= truncate(job.description.gsub(/(<[^>]+>)/, ''), length: 200) %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
               <%#= will_paginate @jobs, renderer: BootstrapPagination::Rails, class: 'text-center' %>     
          </div>
        </div>
      </div>
      
      <div class='medium-4 columns company-aside'>
        <%= render partial: "companies/myshare/aside" %>
      </div>
    </div>
  </div>
</div>

<%= render partial: "companies/myshare/script" %>