<div class='row'>
  <div class='medium-10 medium-centered columns job-searh-form'>
    <%= form_tag search_jobs_path, method: :get do %> 
      <div class="row collapse"> 
        <div class="small-9 columns">
          <%= text_field_tag :search, params[:search], placeholder: "Search for your next career jobs..." %>
        </div>
        <div class="small-3 columns">
          <%= submit_tag 'Job Search', name: nil, class: "warning button postfix " %>
        </div>   
      </div>
    <% end %>
  </div>
</div>

<div class='row'>
  <div class='medium-8 columns jobs-list'>
    <br>
  <div id="jobs">
    <%= render @jobs %>
  </div>               
   
   
   <div class ="row">
      <div class="digg_pagination"><br>
        <div class="page_info text-center"><br><br>
        <%= will_paginate @jobs %>
          <%#= page_entries_info @jobs %> 
        </div>
        <%#= will_paginate @collection, renderer: BootstrapPagination::Rails, class: 'text-center' %> 
             <%#= will_paginate @jobs, :container => false, class: "paginate-display" %>   
              <%#= will_paginate @jobs, :page_links => false %> 
      </div>
    </div> 
  </div>
  <div class='medium-4 columns'>
    <div class='hidden-for-small-only job-ads-listing'>
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <!-- MasmaSpace News -->
      <ins class="adsbygoogle"
         style="display:inline-block;width:300px;height:600px"
         data-ad-client="ca-pub-1207389406711656"
         data-ad-slot="8952579198"></ins>
      <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>
  </div>
</div>
    




