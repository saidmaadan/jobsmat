<%= form_for(@employer) do |f| %>
  <%= render "shared/errors", object: @employer %>

    <div class="form-group">
      <%= f.text_field :name, size: 50, autofocus: true, placeholder: "Your Full Name" %>
    </div>

    <div class="form-group">
        <%= f.text_field :username, size: 50,
                  placeholder: "Username Alphanumeric characters only!" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, size: 50, placeholder: "Email Address" %>
    </div>

   <div class="form-group">
      <%= f.password_field :password, size: 50, placeholder: "Password 8 or more characters" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, size: 50, placeholder: "Confirm Password" %>
    </div>

    <div class="form-group">
      <% if @employer.new_record? %>
        <%= f.submit "Create Account", class: "success button" %>
      <% else %>
        <%= f.submit "Update Account", class: "success button" %>
      <% end %>
    </div>
<% end %>
