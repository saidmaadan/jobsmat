<a href="#" data-reveal-id="contact_candidate" class="radius success button" style="width:90%;margin-bottom: -1px;text-align: left;padding-left: 5%;">Send Me Message&hellip;</a>
<% if @candidate.email_status == "PUBLIC" %>
  <a href="mailto:<%= @candidate.email %>"  class="radius success button" style="width:90%;margin-top:-5px;border-top: 1px solid #eaf4ee;text-align: left;padding-left: 5%;">Send E-Mail</a>
<% end %>


<!-- Reveal Modals begin -->
    <div id="contact_candidate" class="reveal-modal" data-reveal aria-labelledby="firstModalTitle" aria-hidden="true" role="dialog">
        <div class="job-apply">
          <h3>Hi, My name is <%= @candidate.name %>, Feel free to get in touch with me</h3><hr>
          <%= form_for [@candidate, @contact_candidate] do |f| %>
            <div class="form-group">
            <h4><%= f.label :name %></h4>
            <%= f.text_field :name, class: "form-control", placeholder: "Your name"  %>
            </div>
            <div class="form-group">
              <h4><%= f.label :email %></h4>
              <%= f.text_field :email, class: "form-control", placeholder: "name@company.com"  %>
            </div>
            <div class="form-group">
              <h4><%= f.label :message, "Cover Letter" %></h4>
              <%= f.text_area :message, cols: 40, rows: 5 %>
            </div>
            <div class="form-group">
              <%= f.submit "Sent Message", class: ' success hollow button' %>
            </div>
          <% end %>
        </div> 
      <a class="close-reveal-modal" aria-label="Close">&#215;</a>
    </div>
