<div class='row jobsmat'>
  <div class='tips-ad'>
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<!-- Ms-Jobs1 -->
    <ins class="adsbygoogle"
     style="display:inline-block;width:728px;height:90px"
     data-ad-client="ca-pub-1207389406711656"
     data-ad-slot="3136327086"></ins>
    <script>
    (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
  </div>
  <div class='medium-8 small-12 columns'>
    <div class="tip-details">
      <% if @tip.logo_url %>
        <%= image_tag @tip.logo_url %>
      <% else %>
        <%= image_tag "https://s3.amazonaws.com/inventivelabs/jobsmat/imgs/jobsmat2.jpg" %>
      <% end %>
      <h2><%= @tip.title %></h2>
      <p><%=  @tip.content %></p>
      <% if @tip.source_url %>
        <p>Source: <%= link_to @tip.source_url, @tip.source_url %></p>
      <% end %> 
    </div>
    <% if current_employer_admin? %>
      <ul class="button-group radius">
        <li><%= link_to "Edit", edit_tip_path(@tip), class: 'warning button' %></li>
        <li><%= link_to "Delete", tip_path(@tip), method: :delete, data: {confirm: 'Are you sure?' }, class: 'alert button' %></li>
      </ul>
    <% end %>
    <% if current_employer || current_candidate %>
      <span class="secondary button "><%= link_to pluralize(@comments.length, "Comment"), "#", id:"comments-link" %><i class=' fa fa-comments' style="color:green;padding-left:10px;"></i></span>
    <% else %>
      <span class="secondary button"><%= link_to "Log in to post comment", signin_path %></span>
    <% end %>
    <section id="comments-section">
      <div id="comments">
        <%= render @comments %>
      </div>
      <%= form_for [@tip, @tip.comments.new], remote: true do |f| %>
        <fieldset>
          <%#= f.text_field :name, placehoder: "Enter Your name" %>
          <%#= f.text_field :email %>
          <%= f.text_area :body, rows: 2, cols: 60, placehoder: "Write a comment..." %>
          <%= f.submit 'Post Comment', class: 'success button' %>
        </fieldset>
      <% end %>
    </section>
  </div>
  <div class='medium-4 hide-for-small-only columns tip-details-side'>
    <% if @jobs %>
      <div class='tip-details-side-border'>
        <h2>Recent Jobs</h2>
        <% @jobs.each do |job| %>
          <h3><%= link_to job.title, job %></h3>
          <p><%= "@#{job.company_name}" %></p>
        <% end %>
      </div>
    <% end %>
    <!-- <div class='tip-details-side-border'>
      
    </div> -->
    <div class='tip-details-side-border'>
      <!-- <div class='jobsmat'> -->
      <div class='row company-on-tips'>
        <h2>Recently Added Company</h2>
        <% @companies.limit(6).each do |company| %>
         <% if company.logo_url %>
            <div class='large-4 medium-6 columns'>
              <%= link_to(image_tag(company.logo_url), company) %>
            </div>
          <% end %>
        <% end %>
      </div>
    <!-- </div><br> -->
    </div>
    
      <div class="hidden-for-small-only job-ads">
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <!-- MasmaSpace News -->
      <ins class="adsbygoogle"
         style="display:inline-block;width:300px;height:600px"
         data-ad-client="ca-pub-1207389406711656"
         data-ad-slot="8952579198"></ins>
      <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>
    
  </div>
</div>

