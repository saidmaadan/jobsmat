<nav class="tab-bar">
  <section class="left-small">
    <a class="left-off-canvas-toggle menu-icon" aria-expanded="false"><span></span></a>
  </section>
<!-- style: "margin-top: -30px;" -->
  <section class="right tab-bar-section">
    <h1 class="title hidden-for-small right">
      <% if current_candidate || current_employer %>
        Howdy! <%#= @candidate.name %>&nbsp;&nbsp;
      <%= link_to ' Logout', session_path, method: :delete, style: "color:white;font-weight:bold;"%>
      <% else %>
        <ul class="button-group radius right" style="margin-top: -15px;">
          <li><%=  link_to "Post a Job", jobs_add_path, class: " alert button" %></li>
          <%=  link_to "Find Jobs", jobs_path, class: " success button" %></li>
          <li><%= link_to 'Sign In', signin_path, class: " success button" %></li>
          
        </ul>
      <% end %>
      <%#=  link_to "Post a Job", jobs_add_path, class: "small warning button", style: "margin-top: -30px;" %>
    </h1>
  </section>

</nav>

<aside class="left-off-canvas-menu">
  <ul class="off-canvas-list">
    <% if current_candidate %>
      <li><label>
        Dashboard <%#= @candidate.name %></label>
      
      </li>
      <li class="name"><%#= link_to " @#{@candidate.username}", current_candidate %></li>
      <li><%= link_to " Profile", current_candidate %></li> 
      <li><%= link_to " Edit Profile", profile_info_path(current_candidate) %></li>
      <li><%= link_to "Account Settings", edit_candidate_path(current_candidate) %></li>
      <li><%=  link_to "Find Jobs", jobs_path %></li>
      <li><%= link_to ' Companies', companies_path %></li>
      <li><%= link_to ' Tips & Insights', tips_path%></li>
      <% if current_candidate_admin? %>
          <li><%= link_to 'Post a Tip', tips_add_path %></li>
      <% end %> 
      <% if current_candidate_admin? %>
         <li><%= link_to ' Add Company', companies_add_path %></li>
      <% end %>
      
      <li><%= link_to ' Sign Out', session_path, method: :delete %></li>
      <% if current_candidate_admin? %>
        <li><%= link_to ' Delete Account', @candidate, 
            method: :delete, class: 'fa fa-warning ',
            data: { confirm: 'Are you sure you want to permanently delete your account?' } %></li>
       <% end %>
      
    <% elsif current_employer %>
      <li><label>
          Dashboard <%#= @employer.name %> </label>
      </li>
      <li><%= link_to "Profile", current_employer %></li>
      <li><%= link_to " Update Profile", profile_update_path(current_employer) %></li>
      <li><%= link_to "Account Settings", edit_employer_path(current_employer) %></li>
      <li><%=  link_to "Post a Job", jobs_add_path %></li>
      <li><%=  link_to "Jobs", jobs_path %></li>
      <li><%= link_to 'Companies', companies_path %></li>
      <li><%= link_to 'Tips & Insights', tips_path %></li>
      <% if current_employer_admin? || current_employer_author? %>
        <li><%= link_to 'Post a Tip', tips_add_path %></li>
      <% end %>
      <% if current_employer_admin? %>
        <li><%= link_to ' Add Company', companies_add_path %></li>
      <% end %>
      <li><%= link_to ' Sign Out', session_path, method: :delete %></li> 
      <% if current_employer_admin? %>
        <li><%= link_to ' Delete Account', @employer, 
          method: :delete, class: 'fa fa-warning ',
          data: { confirm: 'Are you sure you want to permanently delete your account?' } %></li>
      <% end %> 
      <% else %>
        <li><label>MENU</label></li>
     
        <li class="name"><i class="fi-home"></i><%= link_to 'Applicant', signup_path %></li>
        <li><%= link_to 'Employer', register_path %></li>
        <li><%= link_to 'Login', signin_path %></li>
        <!-- <li><label>Discover</label></li> -->
        <li><%=  link_to "Jobs", jobs_path %></li>
        <li><%=  link_to "Post a Job", jobs_add_path %></li>
        <li><%= link_to ' Companies', companies_path %></li>
        <li><%= link_to ' Tips & Insights', tips_path %></li>
      <% end %>
    
  </ul>
</aside>

  
  
