<div class='top-nav'>
  <div class='top-body'>
    <div class='medium-4 small-4 columns top-left'>
      <span><%= link_to (image_tag "https://s3.amazonaws.com/inventivelabs/jobinbox/logos/jblogo4.png"), root_path %></span>
    </div>
    <div class='medium-8 small-8 columns top-right'>
      <div class="large-12 columns top-right-main">
        <%= form_tag search_companies_path, method: :get do %> 
          <div class="row collapse"> 
            <div class="large-10 small-8 columns">
              <%= text_field_tag :search, params[:search], placeholder: "Search for your next career jobs..." %>
            </div>
            <div class="large-2 small-4 columns">
              <%= submit_tag 'Search', name: nil, class: "success button postfix" %>
            </div>   
          </div>
        <% end %>
      </div>
      <div class='top-right-side'></div>
    </div>
  </div>
</div>